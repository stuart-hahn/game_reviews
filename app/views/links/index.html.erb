<h1>Listing links</h1>

<%= link_to 'New link', new_link_path %>
<table>
  <tr>
    <th>Title</th>
    <th>URL</th>
    <th></th>
  </tr>
 
  <% @links.each do |link| %>
    <tr>
      <td><%= link.title %></td>
      <td><%= link.url %></td>
      <td><%= link_to 'Show', link_path(link) %></td>
      <td><%= link_to 'Edit', edit_link_path(link) %></td>
      <td><%= link_to 'Destroy', link_path(link), method: :delete, data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
</table>