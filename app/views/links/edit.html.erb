<h1>Edit link</h1>
 
<%= form_with(model: @link, local: true) do |form| %>
    <%= render '/shared/errors', object: @link %>
  <p>
    <%= form.label :title %><br>
    <%= form.text_field :title %>
  </p>
 
  <p>
    <%= form.label :text %><br>
    <%= form.text_area :text %>
  </p>
 
  <p>
    <%= form.submit %>
  </p>
 
<% end %>
 
<%= link_to 'Back', links_path %>